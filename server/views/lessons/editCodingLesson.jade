extends ../layout

block content
    h1(class="headline") Coding Aufgabe bearbeiten
    div(class="editLessonTileContainer")
        div(class="editLessonTile")
            form(class="modalForm" action="/saveEditCodingLesson" method="post")
                include ../formError
                include baseEditLessonForm
                span.label Aufgabenüberprüfungstyp
                select(name="verificationType" required)
                    option(value="JASMINE" selected=lesson.verificationtype === 'JASMINE') Jasmine
                    option(value="SELF" selected=lesson.verificationtype === 'SELF') Selbst
                br
                span.label Überprüfungscode
                textarea(name="verificationCode" required) #{lesson.verificationcode}
                br
                span.label Musterlösung
                textarea(name="exampleSolution" required) #{lesson.examplesolution}
                br
                span.label Überprüfungsinformationen
                textarea(name="verificationInformation" required) #{lesson.verificationinformation}
                br
                button(class="btn btn-primary saveBt" type="submit") Speichern

        div(class="editLessonTile")
            include ../files
