block content
    button(type="button" class="btn imgButton" data-toggle="modal" data-target="#createCodeExtensionLesson")
        include ../../public/images/add-icon.svg
        br
        span Hinzufügen
    div(class="modal fade" id="createCodeExtensionLesson" tabindex="-1" role="dialog" aria-hidden="true")
        div(class="modal-dialog modal-dialog-centered" role="document")
            div(class="modal-content")
                div(class="modal-header")
                    h5(class="modal-title") Code Ergänzungsaufagbe erstellen
                    button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                div(class="modal-body")
                    div(id="codeExtensionErrorMessage" class="errorMessage")
                        if codeExtensionErrorMessages
                            p #{codeExtensionErrorMessages}
                    form(class="modalForm" action="/saveCreateCodeExtensionLesson" method="post")
                        include ./baseCreateLessonForm
                        span.label(class="input-group-text") Zu ergänzenden Code mit [input] als lücken
                        textarea(class="form-control" name="unfinishedCode" required) #{lesson ? lesson.unfinishedcode : ''}
                        br
                        span.label(class="input-group-text") Zu ergänzender Code <br> (pro Input eine Zeile in richtiger Reihenfolge)
                        textarea(class="form-control" name="answers" required) #{lesson ? lesson.answers : ''}
                        br
                        button(type="button" class="btn btn-danger" data-dismiss="modal") Abbruch
                        button(class="btn btn-primary saveBt" type="submit") Speichern
                div(class="modal-footer")
                    include ../files
